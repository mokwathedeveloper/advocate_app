{
  "name": "advocate-case-management-backend",
  "version": "1.0.1",
  "description": "Backend API for Advocate Case Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seedDatabase.js",

    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:silent": "jest --silent",

    "test:unit": "node scripts/test-runner.js unit",
    "test:integration": "node scripts/test-runner.js integration",
    "test:workflow": "node scripts/test-runner.js workflow",
    "test:search": "node scripts/test-runner.js search",
    "test:management": "node scripts/test-runner.js management",
    "test:all": "node scripts/test-runner.js all",

    "test:auth": "jest auth-rbac.test.js",
    "test:auth-system": "node scripts/test-auth-system.js",
    "validate-auth": "npm run test:auth && npm run test:auth-system",

    "test:performance": "jest --testPathPattern=performance",
    "test:e2e": "jest --testPathPattern=e2e",

    "test:cleanup": "node scripts/test-runner.js --cleanup",
    "test:ci": "jest --ci --coverage --watchAll=false",

    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",

    "coverage:report": "jest --coverage && open coverage/lcov-report/index.html",
    "coverage:check": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":70,\"functions\":70,\"lines\":70,\"statements\":70}}'",

    "pretest": "npm run lint",
    "posttest": "npm run coverage:check"
  },
  "keywords": [
    "legal",
    "case-management",
    "api",
    "mongodb",
    "express"
  ],
  "author": "LegalPro Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.4",
    "twilio": "^4.19.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "babel-jest": "^29.7.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
